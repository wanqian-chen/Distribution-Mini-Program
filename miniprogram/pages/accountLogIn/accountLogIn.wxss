/* pages/accountLogIn/accountLogIn.wxss */
.form-common{
  padding: 48rpx;
  padding-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.formc-cnt{
  padding: 16rpx 0;
  display: flex;
  border-bottom: 1px solid #eee;
  margin: 16rpx 0
}

.option{
  width: 100%;
}

.option .register{
  font-size: 30rpx;
  color: rgb(40, 185, 48);
  display: flex;
  justify-content: flex-end;
}

.login{
  /* width: 350rpx; */
  width: 100%;
  height: auto;
  margin-top: 70rpx;
  /* position: absolute; */
  /* margin-top: 600rpx; */
  /* margin-left: 100rpx; */
}

.login .log-btn{
  display: flex;
  align-items: center;
  justify-content: center;
  /* line-height: 50rpx; */
  font-size: 32rpx;
  width: 90%;
  height: 100%;
  border-radius: 30rpx;
}

.form-common button,.btnhover{
  margin-top: 48rpx;
  display: block;
  background-color: #d43c33;
  height: 2.4em;padding: 0;
  line-height: 2.4;
  border-radius: 5rpx;
  font-size: 32rpx
}

.formc-cnt text{
  text-align: left
}

.formc-cnt input{
  flex: 1;
  display: block
}

/* other way */
.notification{
  padding-left: 100rpx;
  display: flex;
  position: relative;
  width: 100%;
  height: 60rpx;
  padding-top: 150rpx;
}
.notification .line{
  margin-left: 5rpx;
  margin-top: 18rpx;
  width: 120rpx;
  height: 3rpx;
 background-color:#aaaaaa;
}
.notification .notify-text{
  color: #aaaaaa;
  font-size: 25rpx;
}

.icon{
  margin-top: 100rpx;
  padding-top: 50rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 150rpx;
}
.icon image{
  /* padding-left: 120rpx; */
  width: 80rpx;
  height: 80rpx;
}